<!DOCTYPE html>
<html>
<head>
  <title><%= page_title %></title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
<%= render 'layouts/header' %>

<% unless flash.empty? %>
  <div class='flash'>
    <% if flash[:notice] %>
      <div class='notice'>
        <%= flash[:notice] %>
      </div>
    <% elsif flash[:alert] %>
      <div class='alert'>
        <%= flash[:alert] %>
      </div>
    <% end %>
  </div>
<% end %>

<table class='big-panel'>
  <td class="main-panel">
    <%= yield %>
  </td>
  <td class="page-sidebar">
    <%= render 'layouts/sidebar' %>
  </td>
</table>
<%= render 'layouts/footer' %>
</body>
</html>
