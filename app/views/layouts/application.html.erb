<!DOCTYPE html>
<html>
<head>
  <title>User Account</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
<%= render 'layouts/header' %>
<%= render 'layouts/sidebar' %>

<div class='flash'>
  <% if flash[:notice] %>
      <div class='notice'>
        <%= flash[:notice] %>
      </div>
  <% elsif flash[:alert] %>
      <div class='alert'>
        <%= flash[:alert] %>
      </div>
  <% end %>
</div>

<div style="padding-left: 5em">
    <%= yield %>
</div>

<%= render 'layouts/footer' %>
</body>
</html>
