<%= simple_form_for @movie do |f| %>
  <%= f.input :title, :autofocus => true %>
  <%= f.input :description, :as => :text, :input_html => {:cols => 29, :rows => 10} %>
  <%= f.input :rating, :collection => Movie::RATINGS, :prompt => 'Pick one' %>
  <%= f.input :released_on %>
  <%= f.input :total_gross %>
  <%= f.input :cast %>
  <%= f.input :director %>
  <%= f.input :duration %>
  <%= f.input :image_file_name %>
  <%= f.association :genres, :as => :check_boxes, :collection => Genre.all.order(:name), :label => 'Genres' %>

  <%= f.button :submit %> |
  <%= link_to 'Cancel', movies_path %>
<% end %>
