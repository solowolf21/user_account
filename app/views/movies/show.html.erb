<article class="movie">
  <header>
    <h2><%= @movie.title %></h2>

    <h3><%= image_for @movie %></h3>
    <h3>Average Review</h3>
    <p>
      <%= format_average_stars(@movie) %>
    </p>
    <label>Description:</label>
    <p><%= @movie.description %></p>
  </header>
  <table>
    <tr>
      <th>Released:</th>
      <td><%= @movie.released_on.to_s + ' (' + time_ago_in_words(@movie.released_on) +')' %></td>
    </tr>
    <tr>
      <th>Rating:</th>
      <td><%= @movie.rating %></td>
    </tr>
    <tr>
      <th>Total Gross:</th>
      <td><%= format_total_gross(@movie) %></td>
    </tr>
    <tr>
      <th>Cast:</th>
      <td><%= @movie.cast %></td>
    </tr>
    <tr>
      <th>Director:</th>
      <td><%= @movie.director %></td>
    </tr>
    <tr>
      <th>Duration:</th>
      <td><%= @movie.duration %></td>
    </tr>
    <tr>
      <td><%= link_to pluralize(@movie.reviews.size, 'review'),  movie_reviews_path(@movie)%></td>
      <td><%= link_to 'Write a Review', new_movie_review_path(@movie) %></td>
    </tr>
  </table>

  <% if current_user_admin? %>
    <%= link_to 'Edit', edit_movie_path(@movie) %> |
    <%= link_to 'Delete', @movie, :method => :delete, :data => {:confirm => 'Are you sure?'} %>
  <% end %>
</article>